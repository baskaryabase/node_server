<body>
	<!-- main -->
	<div class="main">
		<div class="main-w3lsrow">
			<!-- login form -->
			<div class="login-form login-form-left">
				<div class="agile-row">
					<div id="alert" style="display:none" class="alert alert-danger">

					</div>
					<h2 style="">Login Here</h2>
					<div class="login-agileits-top">
						<form action="/signin" method="post">
							<p style="font-weight:800;color:#fe7902;font-size:16px;">Email or User Name </p>
							<input id="email" type="text" class="name" name="email" required=""/>
							<p style="font-weight:800;color:#fe7902;font-size:16px;">Password</p>
							<input id="password" type="password" class="password" name="password" required=""/>
							<!-- <label class="anim">
								<input type="checkbox" class="checkbox">
								<span> Remember me ?</span>
							</label> -->
							<input type="button" onclick="login()" value="Login">
						</form>
					</div>
					<div class="login-agileits-bottom">
						<h6><a href="#">Forgot password?</a></h6>
					</div>

				</div>
			</div>
		</div>
	</div>
	<!-- //main -->
<script type="text/javascript">
function login() {
	var email = $("#email").val();
	var password = $("#password").val();
	axios
		.post("/signin", { email: email, password: password })
		.then(function(data) {
			if (data.status == 200) {
				window.sessionStorage.setItem("token", data.data.token);
				console.log("Data: ", data);
				window.location.replace("/vendor/dashboard");
			} else {
				console.log("a");
				document.getElementById("alert").style.display = "none";
				document.getElementById("alert").style.content =
					"Invalid Username Or Password";
			}
		})
		.catch(function(err) {
			console.log("a");
			document.getElementById("alert").style.display = "block";
			document.getElementById("alert").innerHTML =
				"Invalid Username Or Password";
		});
	//   $.post("/signin", { email: email, password: password }, function(
