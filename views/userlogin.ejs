<script type="text/javascript">
function validateEmail() {
  var x = $("#email").val();
  var atpos = x.indexOf("@");
  var dotpos = x.lastIndexOf(".");
  if (atpos < 1 || dotpos < atpos + 2 || dotpos + 2 >= x.length) {
    return false;
  } else {
    return true;
  }
}
function signup() {
  if ($("#numbers").val().length != 10) {
    document.getElementById("alert").style.display = "block";
    document.getElementById("alert").innerHTML = "Enter a valid mobile number";
    return false;
  }
  var name = $("#name").val(),
    phone = $("#numbers").val(),
    email = $("#email").val(),
    gender = $("#gender").val(),
    password = $("#passwords").val(),
    cpassword = $("#cpasswords").val();
  if (email == "" || name == "" || phone == "" || password == "") {
    document.getElementById("alert").style.display = "block";
    document.getElementById("alert").innerHTML = "Checkout All fields";
  } else if (validateEmail() == false) {
    document.getElementById("alert").style.display = "block";
    document.getElementById("alert").innerHTML = "Enter a Valid Email Address";
  } else {
    if (password != cpassword) {
      document.getElementById("alert").style.display = "block";
      document.getElementById("alert").innerHTML = "Password Does Not Match";
    } else {
      document.getElementById("alert").style.display = "none";
      document.getElementById("alert").innerHTML = "";
      axios
        .post(
          "http://getfytserver-env.gundmvzb2r.ap-south-1.elasticbeanstalk.com/user/signup",
          {
            name: $("#name").val(),
            phone: $("#numbers").val(),
            email: $("#email").val(),
            gender: $("#gender").val(),
            password: $("#passwords").val(),
            joined_through: "web"
          }
        )
        .then(function(response) {
          if (response.status == 200) {
            console.log("Data: ", response.data.data);
            window.localStorage.setItem("token", response.data.token);
            window.location.replace("/");
          } else {
            document.getElementById("alert").style.display = "block";
            document.getElementById("alert").innerHTML =
              "invalid Username or password";
          }
        })
        .catch(function(err) {
          console.log(err);

          document.getElementById("alert").style.display = "block";
          document.getElementById("alert").innerHTML =
            "phone number already in use";
          // "Error Signing Up please Try again later";
        });
    }
  }
  return true;
}

function signin() {
  var phone = $("#number").val();
  var password = $("#password").val();
  if (phone == "" || password == "") {
    document.getElementById("alert").style.display = "none";
    document.getElementById("alert").style.content = "Checkout all field";
    return false;
  }
  axios
    .post(
      "http://getfytserver-env.gundmvzb2r.ap-south-1.elasticbeanstalk.com/user/login",
      {
        phone: $("#number").val(),
        password: $("#password").val()
      }
    )
    .then(function(data) {
      if (data.status == 200) {
